
@{
    ViewBag.Title = "Add " + ViewBag.Name;
}

<a href="/Library/AddBook">
    <div>
        <button class="glyphicon glyphicon-plus" id="add-new-book"></button><span>Add book</span>
    </div>
</a>

<h2>Add New @ViewBag.Name</h2>
<form action="/" class="form-container">
    <label for="@ViewBag.Name"><b>@ViewBag.Name Name</b></label>
    <input type="text" placeholder="Name..." name="@ViewBag.Name" required>

    <button type="submit" class="btn">Add @ViewBag.Name</button>
</form>

